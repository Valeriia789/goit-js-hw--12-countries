{{#each this}}
  <div class='country-card'>
    <div class='country-title'>
      <h2 class='country-name'>{{name}}</h2>
    </div>

    <div class='country-body-container'>
      <div class='country-info-container'>
        <p class='region'><b>Region: </b>{{region}}</p>
        <p class='capital'><b>Capital: </b>{{capital}}</p>
        <p class='population'><b>Population: </b>{{population}}</p>
        <p class='languages'><b>Languages: </b></p>
        <ul class='languages-list'>
          {{#each languages}}
            <li class='languages-list-item'>{{name}}</li>
          {{/each}}
        </ul>
      </div>

      <div class='country-flag-container'>
        <img class='country-flag-image' src='{{flag}}' alt='{{name}}' />
      </div>
    </div>
  </div>
{{/each}}